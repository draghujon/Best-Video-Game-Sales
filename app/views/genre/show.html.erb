<h1 class="title is-3"><%= @genre.genre_name %></h1>

<table class="table is-4">
  <thead>
    <h4 class="title is-6">Games with genre '<%= @genre.genre_name %>'</h4>
    <% @genre.games.each do |game| %>
    <tr>
      <td><%= link_to game.game_name, game %></td>
    </tr>

    <% end %>
  </thead>
</table>

<%= link_to 'Back', game_index_path %>
